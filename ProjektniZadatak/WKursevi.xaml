            <TextBox Height="31" HorizontalAlignment="Left" Margin="24,488,0,0" Name="tbPretraga" VerticalAlignment="Top" Width="245" />
            <Button Content="Pretrazi" Height="34" HorizontalAlignment="Left" Margin="305,488,0,0" Name="button1" VerticalAlignment="Top" Width="115" Click="button1_Click" />
            <RadioButton Content="Jezik" Height="16" HorizontalAlignment="Left" Margin="265,369,0,0" Name="rbJezik" VerticalAlignment="Top" GroupName="rbgPretraga"/>
            <RadioButton Content="NivoJezika" Height="16" HorizontalAlignment="Left" Margin="265,399,0,0" Name="rbNivo" VerticalAlignment="Top" GroupName="rbgPretraga" />
            <Button Content="Prikazi sve" Height="25" HorizontalAlignment="Left" Margin="467,377,0,0" Name="bPrikaziSve" VerticalAlignment="Top" Width="130" Click="bPrikaziSve_Click" />
        </Grid>
    </Grid>
</Window>
